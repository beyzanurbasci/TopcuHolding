@model ContactFormModel
@{
    ViewData["Title"] = "İletişim";
}

<div role="main" class="main">

    <section class="section section-height-3 border-0 m-0"
             style="background-image:url('@Url.Content("~/assets/NewFolder/yonetim.png")'); background-size: cover; background-position: center;">
        <div class="container position-relative pt-5 pb-5-5 mt-5 mb-5">
            <div class="row justify-content-end pt-1 mt-lg-5">
                <div class="col-7 col-md-5 position-relative">
                    <ul class="breadcrumb d-block ps-2 appear-animation"
                        data-appear-animation="fadeInLeftShorterPlus"
                        data-appear-animation-delay="200">
                        <li class="active"></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <div class="container pt-4 pb-5 pb-sm-0 my-5">
        <div class="row pb-2 mb-5">
            <div class="col-lg-6">
                <h2 class="font-weight-bold text-color-dark text-6 mb-4">Bize Mesaj Gönderin</h2>

                <form id="contactForm" novalidate>
                    <div class="form-group mb-3">
                        <input id="Name" name="Name" type="text" class="form-control text-3 h-auto py-3-5"
                               placeholder="Adınız" required
                               pattern="^[A-Za-zÇçĞğİıÖöŞşÜü\s]{2,50}$"
                               title="Lütfen geçerli bir ad giriniz (sadece harf)." />
                    </div>
                    <div class="form-group mb-3">
                        <input id="Email" name="Email" type="email" class="form-control text-3 h-auto py-3-5"
                               placeholder="Email adresiniz" required />
                    </div>
                    <div class="form-group mb-3">
                        <input id="Subject" name="Subject" type="text" class="form-control text-3 h-auto py-3-5"
                               placeholder="Konu" required />
                    </div>
                    <div class="form-group mb-3">
                        <textarea id="Message" name="Message" rows="6" class="form-control text-3 h-auto py-3-5"
                                  placeholder="Mesajınız" required></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit"
                                class="btn btn-primary font-weight-semibold text-3-5 px-4 py-2"
                                id="submitButton">
                            Gönder
                        </button>
                    </div>
                </form>

                <div id="formAlert" class="alert d-none mt-3"></div>
            </div>

            <div class="col-lg-6">
                <!-- İletişim Bilgileri -->
                <div class="mb-4">
                    <a href="tel:08502227347" class="d-flex align-items-center text-decoration-none text-dark">
                        <img width="23" src="~/assets/img/demos/construction/icons/phone.svg" class="me-2" />
                        +90 850 222 73 47
                    </a>
                </div>
                <div class="mb-4">
                    <a href="mailto:info@topcuholding.com" class="d-flex align-items-center text-decoration-none text-dark">
                        <img width="23" src="~/assets/img/demos/construction/icons/email.svg" class="me-2" />
                        info@topcuholding.com
                    </a>
                </div>
                <div>
                    <span class="d-flex align-items-center text-dark">
                        <img width="23" src="~/assets/img/demos/construction/icons/location.svg" class="me-2" />
                        Abdurrahmangazi, İmamoğlu Sokak, Sancaktepe/İstanbul
                    </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <!-- Google Maps Embed -->
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12040.726576696527!2d29.243318711286023!3d40.99125177151039!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac7b56c548bbf%3A0xe445a683946b18d3!2sAbdurrahmangazi%2C%20%C4%B0mamo%C4%9Flu%20Sk.%2C%20Sancaktepe%2F%C4%B0stanbul!5e0!3m2!1str!2str!4v1721133667425!5m2!1str!2str"
                        width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js?render=your-site-key"></script>
    <script>
        $(function () {
            $('#contactForm').on('submit', function (e) {
                e.preventDefault();
                $('#submitButton').prop('disabled', true);

                grecaptcha.ready(function () {
                    grecaptcha.execute('your-site-key', { action: 'submit' }).then(function (token) {

                        const formData = {
                            name: $('#Name').val(),
                            email: $('#Email').val(),
                            subject: $('#Subject').val(),
                            message: $('#Message').val(),
                            recaptchaToken: token
                        };

                        $.ajax({
                            url: '/Contact/SubmitContactForm',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(formData),
                            success: function (res) {
                                $('#formAlert').removeClass('d-none alert-danger').addClass('alert-success').text(res.message);
                                $('#contactForm')[0].reset();
                                $('#submitButton').prop('disabled', false);
                            },
                            error: function (xhr) {
                                let errorMsg = "Bir hata oluştu. Lütfen tekrar deneyin.";
                                if (xhr.responseJSON?.error) errorMsg = xhr.responseJSON.error;
                                $('#formAlert').removeClass('d-none alert-success').addClass('alert-danger').text(errorMsg);
                                $('#submitButton').prop('disabled', false);
                            }
                        });
                    });
                });
            });
        });
    </script>
}


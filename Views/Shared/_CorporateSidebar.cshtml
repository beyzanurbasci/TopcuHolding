            <li class="nav-item border border-color-grey-1 border-top-0 border-end-0 border-start-0 mb-0">
                <a class="nav-link text-color-dark text-color-hover-primary py-3 ps-0 @(currentPath == Routes.Corporate.About.ToLower() ? "active" : "")" href="@Routes.Corporate.About">
                    <i class="fas fa-chevron-right text-1 position-relative top-1 pe-3-5"></i> Hakkımızda
                </a>
            </li>

            <li class="nav-item border border-color-grey-1 border-top-0 border-end-0 border-start-0 mb-0">

@model TopcuHolding.Models.ContactMessage
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "İletişim";
    var siteKey = Configuration["GoogleReCaptcha:SiteKey"];

}




<section class="section section-text-light section-background m-0"
         style="background-color:var(--primary); background-size: cover;">
    @*background: url('@Url.Content("~/assets/img/topcu-holding/topcu-holding-cover-1.png")');
		optionally you can use a background color instead of an image *@

    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h2 class="font-weight-bold">Bize Ulaşın</h2>
                <p class="custom-opacity-font">
                    Topçu Holding olarak tarihi, milli ve kültürel sorumluluğumuzun farkındayız. Türkiye distribütörlüğünü yaptığımız global markalarımız, yerli ve milli üretimle ekonomimize katkı sağlamak konusundaki kararlılığımız ve olușturduğumuz istihdam olanakları ile geçmiște olduğu gibi yarın da ilerlemeye ve ülkemize katkı sağlamaya devam edeceğiz.
                </p>

                <div class="row">
                    <div class="col-md-6 custom-sm-margin-top">
                        <h4 class="mb-1">Telefon</h4>
                        <a href="tel:+90 850 222 73 47" class="text-decoration-none" target="_blank" title="Bizi Arayın">
                            <span class="custom-call-to-action-2 text-color-light text-2 custom-opacity-font">

                                <span class="info text-5">

                                    +90 850 222 73 47
                                </span>
                            </span>
                        </a>
                    </div>
                    <div class="col-md-6 custom-sm-margin-top">
                        <h4 class="mb-1">Adres</h4>
                        @* <p class="custom-opacity-font">
							Abdurrahmangazi Mah.
							İmamoğlu Sokak No:2
							Sancaktepe/İstanbul
						</p> *@
                        <a style="/* font-size:1rem; */" href="https://maps.app.goo.gl/bwHVoYuAZe3bvhVM7" class="text-decoration-none custom-opacity-font" target="_blank" title="Adres">

                            <p>
                                Abdurrahmangazi Mah.
                                İmamoğlu Sokak No:2
                                Sancaktepe / İstanbul
                            </p>


                        </a>


                    </div>
                </div>
                @* <br />
				<br /> *@

                <div class="row">
                    <div class="col-md-6 custom-sm-margin-top">
                        <h4 class="mb-1">
                            E-posta

                        </h4>
                        <a href="mail:info@topcuholding.com" class="text-decoration-none" target="_blank" title="E-Posta Adresimiz">
                            <span class="custom-call-to-action-2 text-color-light text-2 custom-opacity-font">

                                <span class="info text-5">
                                    info@topcuholding.com
                                </span>
                            </span>
                        </a>
                    </div>
                    <div class="col-md-6 custom-sm-margin-top">
                        <h4 class="mb-1">Sosyal Medya</h4>
                        <ul class="social-icons social-icons-clean custom-social-icons-style-1 mt-2 custom-opacity-font">
                            <li class="social-icons-linkedin">
                                <a href="https://www.linkedin.com/company/topcuholding" target="_blank" title="Linkedin">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 custom-sm-margin-top">
                <h2 class="font-weight-bold">
                    Bizimle İletişime Geçin
                </h2>

                @* @if (Model!=null && Model.IsSuccess == true)
                {
                    <div class="alert alert-success">
                        <strong>Başarılı!</strong> Mesajınız bize ulaşmıştır.
                    </div>
                }
                else
                {

                    <div class="alert alert-danger">
                        <strong>Başarısız!</strong> Mesajınız bize ulaşmadı şimdilik.
                    </div>
                    
                } *@

                <form class=" form-errors-light" asp-controller="Contact" asp-action="Index" method="post">

                    <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                    <input type="hidden" name="subject" value="Mesajınız alınmıştır." />
                    <div class="row">
                        <div class="form-group col">
                            <div class="">
                                <i class="icon-user icons text-color-primary"></i>
                                <input id="name" asp-for="Name" type="text" data-msg-required="Lütfen isminizi giriniz!" minlength="2" maxlength="100" class="form-control" name="name" placeholder="İsminiz*" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <div class="">
                                <i class="icon-envelope icons text-color-primary"></i>
                                <input id="email" asp-for="Email" type="email" data-msg-required="Lütfen e-posta adresinizi giriniz! " data-msg-email="Lütfen geçerli bir e-posta adresi giriniz!." maxlength="50" class="form-control" name="email" placeholder="E-posta Adresiniz*" required>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <div class="">
                                <i class="icon-bubble icons text-color-primary"></i>
                                <textarea id="subject" asp-for="Message" maxlength="500" data-msg-required="Lütfen mesajınızı yazınız!" rows="10" class="form-control" name="message" placeholder="Mesajınız*" required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <div class="">
                                <input type="hidden" id="RecaptchaToken" name="RecaptchaToken" />


                                <div class="g-recaptcha" data-sitekey="@siteKey" data-callback="onReCaptchaSuccess"></div>
                                <span class="text-danger">@Html.ValidationMessage("Captcha")</span>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <input type="submit" value="Gönder" class="btn btn-outline custom-border-width btn-secondary custom-border-radius font-weight-semibold text-uppercase" data-loading-text="Mesajınız Gönderiliyor...">
                        </div>

                    </div>


                    <div class="row">
                        <div class="form-group col">
                           

                            @if (TempData["FormMessage"] != null)
                            {
                                @if ((string)TempData["FormMessage"] == "error" )
                                {
                                    <div class="">
                                    <div class="alert alert-danger">
                                        Mesajınız iletilirken bir hata oluştu!
                                    </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="">
                                    <div class="alert alert-success">
                                        Mesajınız başarıyla iletilmiştir!
                                    </div>
                                    </div>
                                }
                                
                            }
                            


                        </div>
                    </div>
                </form>


            </div>
        </div>

    </div>

</section>
<footer id="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center pb-4">
                <p>2025 ©  Topçu Holding <span class="text-color-light"></span>Tüm hakları Saklıdır</p>
            </div>
        </div>
    </div>
</footer>
